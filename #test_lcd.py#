import RGB1602
import time
import math


def display(lcd, task_name, color):
	lcd.printout(task_name)
	lcd.setCursor(0, 1)
	# timer
	start = time.time()
	while true:
		now = time.timer()
		lcd.printout(str(now - start))
	lcd.setRGB(color[0], color[1], color[2])


